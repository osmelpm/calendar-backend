{
  "compilerOptions": {
    "target": "ES2023", // o superior
    "module": "ES2022", // para generar imports/exports ES
    "moduleResolution": "bundler", // resolución de módulos ESM estilo Node
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
